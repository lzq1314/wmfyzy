<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sang.mapper.CommodityMapper">
    <resultMap id="BaseResultMap" type="org.sang.bean.Commodity">
        <id column="id" property="id"/>
        <result column="commodity_name" property="commodity_name"/>
        <result column="commodity_amount" property="commodity_amount"/>
        <result column="createDate" property="createDate"/>
        <result column="commodity_status" property="commodity_status"/>
    </resultMap>
    



    <select id="getCommodityById" resultMap="BaseResultMap">
        select * from t_commodity e
    </select>
    
    <select id="getOrdersCommodityByMemberId" resultType="map">
        SELECT
			c.*, sum(o.commodity_count) cnt
		FROM
			t_commodity c
		LEFT JOIN t_orders o ON c.id = o.commodity
		AND o.member_id = #{memberId}
    </select>

</mapper>